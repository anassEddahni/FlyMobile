<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="105dp"
                android:layout_marginLeft="10dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/nom_produit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="nom_produit"
                        android:textSize="30sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/description_produit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="description_produit"
                        android:textSize="10sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/prix_produit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="prix_produit"
                        android:textColor="#ec0101"
                        android:textSize="30sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/prix_eco_produit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="prix_eco_produit"
                        android:textSize="10sp" />

                </LinearLayout>

            </LinearLayout>


            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="151dp"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/garantie"
                android:layout_marginLeft="60dp"/>

        </LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="15dp"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="198dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"

        android:background="#2e2e2e"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/camion"
            android:layout_width="53dp"
            android:layout_height="27dp"
            android:src="@drawable/camion1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="LIVRAISON SOUS 6 SEMAINES"
            android:textAlignment="center"
            android:textColor="@color/colorWhite"
            android:textSize="10sp"
            android:textStyle="bold" />


    </LinearLayout>

    <android.support.v7.widget.AppCompatSpinner
            android:id="@+id/spinner"
            android:layout_width="60dp"
            android:layout_height="35dp"
            android:layout_gravity="right"
            android:layout_marginLeft="60dp"
            android:background="@drawable/recycler_shape"/>
</LinearLayout>

    </LinearLayout>
</LinearLayout>