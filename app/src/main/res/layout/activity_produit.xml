<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:weightSum="1"
    tools:context="com.example.dit.viewpagerswipe.ProduitActivity">




    <ImageView
        android:id="@+id/image_article"
        android:layout_width="match_parent"
        android:layout_height="143dp"
        android:layout_margin="20dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_weight="0.32"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/nom_produit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="nom_produit"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/description_produit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="description_produit"
                android:textAlignment="center" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/prix_produit"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="pix_produit"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/prix_eco_produit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="prix_eco_produit"
                android:textAlignment="center" />

        </LinearLayout>

    </LinearLayout>
    <ExpandableListView
        android:id="@+id/lvExp"
        android:layout_width="match_parent"
        android:layout_height="287dp"
        android:cacheColorHint="#00000000" />
</LinearLayout>
